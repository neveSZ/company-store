<% if @collaborator.present? %>
    <%= @collaborator.name %>
    <%= @collaborator.email %>
    <%= @collaborator.birth_date %>
    <%= @collaborator.role %>
    <%= @collaborator.department %>
    <% if @products.any? %>
        <% @products.each do |product| %>
            <%= link_to product.name, product %>
            <%= number_to_currency product.value %>
            <% if current_collaborator != product.collaborator %>
                <%= link_to 'Comprar', orders_path(product_id: product),method: :post %>
            <% end %>
        <% end %>
    <% else %>
        Nenhum produto dispon√≠vel
    <% end %>
<% end %>
